---
import Layout from "@layouts/Layout.astro";
import Section from "@components/Section.astro";

import {
  colorNames,
  colorPairings,
  colorShades,
  bgColors,
  textColors,
  bgColorPairings,
  textColorPairings,
} from "./_classes";
---

<Layout back>
  <h1 class="hd-1 mb-4">Colors</h1>
  <p>
    shows <code class="code">--color-*</code> and <code class="code"
      >--color-*-*</code
    > variables and their contrast counterparts being used.
  </p>

  <Section>
    <h2 class="hd-2">Color Sets</h2>
    <div class="grid grid-cols-7">
      {
        colorNames.map((set, i) => (
          <div>
            <p class="text-sm text-center break-words h-9">{set}</p>
            <div>
              {bgColors[i].map((bgClass, j) => (
                <div class={`flex items-center justify-center h-9 ${bgClass}`}>
                  <span class={`${textColors[i][j]} text-xs`}>
                    {colorShades[j]}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </Section>

  <Section>
    <h2 class="hd-2">Color Pairings</h2>
    <div class="grid grid-cols-7">
      {
        colorNames.map((set, i) => (
          <div>
            <p class="text-sm text-center break-words h-9">{set}</p>
            <div>
              {bgColorPairings[i].map((bgClass, j) => (
                <div class={`flex items-center justify-center h-9 ${bgClass}`}>
                  <span class={`${textColorPairings[i][j]} text-xs`}>
                    {colorPairings[j][0]}-{colorPairings[j][1]}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </Section>
</Layout>
